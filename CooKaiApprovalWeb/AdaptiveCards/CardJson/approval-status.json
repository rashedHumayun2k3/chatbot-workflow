{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "text": "${titleText}",
      "size": "large",
      "weight": "bolder",
      "color": "accent"
    },
    {
      "type": "TextBlock",
      "text": "${bodyText}"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "${createApprovalRequestText}",
      "url": "${createApprovalUrl}"
    },
    {
      "type": "Action.OpenUrl",
      "title": "${viewRequestsText}",
      "url": "${viewRequestsUrl}"
    }
  ]
}

